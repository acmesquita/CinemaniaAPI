<p id="notice"><%= notice %></p>

<h1>Filmes</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Sinopse</th>
      <th>Duracao</th>
      <th>Estreia</th>
      <th>Genero</th>
      <th>Nota</th>
      <th>Capa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @filmes.each do |filme| %>
      <tr>
        <td><%= filme.titulo %></td>
        <td><%= filme.sinopse %></td>
        <td><%= filme.duracao %></td>
        <td><%= filme.estreia %></td>
        <td><%= filme.genero %></td>
        <td><%= filme.nota %></td>
        <td><%= filme.capa %></td>
        <td><%= link_to 'Show', filme %></td>
        <td><%= link_to 'Edit', edit_filme_path(filme) %></td>
        <td><%= link_to 'Destroy', filme, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

